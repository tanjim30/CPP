#include<iostream>
using namespace std;
int main()
{
  float cp,sp;
  cout<<"Enter the cost price : ";
  cin>>cp;
  cout<<"Enter the selling price : ";
  cin>>sp;
  if(cp>sp)
  {
    cout<<"The loss is : "<<cp-sp<<endl;
    cout<<"The loss percentage is : "<<((cp-sp)/cp)*100<<"%";
  }
  else if(cp<sp)
    {
      cout<<"The profit is : "<<sp-cp<<endl;
      cout<<"The profit percentage is : "<<((sp-cp)/cp)*100<<"%";
    }
  else
  {
    cout<<"No profit nor loss";
  }
}
